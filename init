mkdir -p ~/.config
mkdir -p ~/.local/share


# remove old versions
rm ~/.tmux.conf
rm -R ~/.local/share/mc
rm -R ~/.config/mc


# tmux
ln -s ~/.local/dot/.tmux.conf ~/.tmux.conf

# Tmux: if no local markers are present, set marker 1.
# Never remove local markers:
if [ -z "$(ls ~/.tmux.marker* 2>/dev/null)" ]; then
  echo "This file marks the version N of" >> ~/.tmux.marker1
  echo " ~./local/dot/.tmux.conf.includeN" >> ~/.tmux.marker1
  echo "that should be included with the .tmux.conf configuration." >> ~/.tmux.marker1
fi

# mc
ln -s ~/.local/dot/.local/share/mc ~/.local/share/mc
ln -s ~/.local/dot/.config/mc
